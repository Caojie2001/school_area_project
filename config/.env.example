# 服务器端口配置
PORT=3000
HTTPS_PORT=3443

# SSL/TLS证书配置
SSL_KEY_PATH=./config/certs/key.pem
SSL_CERT_PATH=./config/certs/cert.pem

# 安全配置
SESSION_SECRET=your-secret-key-here-change-in-production
HTTPS_FORCE_REDIRECT=true

# MySQL数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_database_password_here
DB_NAME=school_area_management

# 文件存储路径
OUTPUT_DIR=output

# 保留的历史文件数量
KEEP_FILES_COUNT=5

# 生产环境配置说明
# 在生产环境中请修改以下配置：
# 1. SESSION_SECRET: 生成一个强随机字符串
# 2. DB_PASSWORD: 设置数据库密码
# 3. SSL证书: 使用权威CA签发的证书
# 4. HTTPS_FORCE_REDIRECT: 在生产环境中设置为true
